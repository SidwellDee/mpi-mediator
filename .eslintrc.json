{
    "env": {
        "es6": true
    },
    "root": true,
    "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
    "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/ban-ts-comment": [0]
    },
    "ignorePatterns": [
        "tests/*",
        "dist/*"
    ]
}
