{
  "name": "mpi-mediator",
  "version": "1.0.0",
  "description": "An OpenHIM mediator to handle all interactions with an MPI component",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --config restart.json",
    "start": "ts-node -r dotenv/config src/index.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "test:unit": "LOG_LEVEL='fatal' mocha -r ts-node/register 'tests/unit/*.ts' --timeout 15000",
    "test:cucumber": "LOG_LEVEL='error' MODE='testing' cucumber-js 'tests/cucumber/features/*.feature' --no-color --logLevel='error' --require 'tests/cucumber/step-definitions/*.ts' --require-module 'ts-node/register' --require-module 'dotenv/config' --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\" --format summary --format progress-bar"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jembi/mpi-mediator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jembi/mpi-mediator/issues"
  },
  "homepage": "https://github.com/jembi/mpi-mediator#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.14",
    "@types/fhir": "^0.0.35",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.6",
    "cucumber": "^6.0.7",
    "dotenv": "^16.0.3",
    "mocha": "^10.1.0",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "rewire": "^6.0.0",
    "supertest": "^6.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "http-proxy-middleware": "^2.0.6",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.7",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1"
  }
}
