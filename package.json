{
  "name": "mpi-mediator",
  "version": "1.0.0",
  "description": "An OpenHIM mediator to handle all interactions with an MPI component",
  "main": "index.ts",
  "scripts": {
    "start": "yarn typeonly && ts-node src/index.ts && rm src/types/conf-types.to.json",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "docker:build": "docker build -t jembi/mpi-mediator:0.1.0 .",
    "test:unit": "yarn typeonly && ts-mocha -p ./tsconfig.json tests/unit/*.ts && rm src/types/conf-types.to.json",
    "test:cucumber": "yarn typeonly && LOG_LEVEL='fatal' MODE='testing' cucumber-js tests/cucumber/features/*.feature --no-color --exit --logLevel=error --require tests/cucumber/step-definitions/*.ts --require-module ts-node/register --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\" --format summary --format progress-bar && rm src/types/conf-types.to.json",
    "typeonly": "typeonly --bundle src/types/conf-types.to.json src/types/mediatorConfig.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jembi/mpi-mediator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jembi/mpi-mediator/issues"
  },
  "homepage": "https://github.com/jembi/mpi-mediator#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "@types/node-fetch": "^2.6.2",
    "@types/request": "^2.48.8",
    "@types/rewire": "^2.5.28",
    "@types/supertest": "^2.0.12",
    "@types/tap": "^15.0.7",
    "openhim-mediator-utils": "^0.2.4",
    "tslint": "^6.1.3",
    "typeonly": "^0.4.6",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@typeonly/validator": "^0.5.2",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/jest": "^29.2.0",
    "axios": "^1.1.3",
    "chai": "^4.3.6",
    "cucumber": "^6.0.7",
    "deep-equal-in-any-order": "^2.0.0",
    "express": "^4.18.2",
    "jest": "^29.2.2",
    "mocha": "^10.1.0",
    "nock": "^13.2.9",
    "node-fetch": "2.6.7",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "request": "^2.88.2",
    "rewire": "^6.0.0",
    "supertest": "^6.3.1",
    "tap": "^16.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "uuid": "^7.0.0"
  }
}
